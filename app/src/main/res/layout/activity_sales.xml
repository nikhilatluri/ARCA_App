<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walpaper_app"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Sales">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Sales"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_date"
        android:background="@drawable/round_edittext"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/et_name"
        android:background="@drawable/round_edittext"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Customer name/Mobile number/Description" />

    <Spinner
        android:id="@+id/et_spinner"
        android:background="@drawable/round_edittext"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <EditText
        android:id="@+id/et_qty"
        android:inputType="number"
        android:background="@drawable/round_edittext"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Qty in kgs" />

    <EditText
        android:id="@+id/et_price"
        android:background="@drawable/round_edittext"
        android:inputType="number"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Price" />

    <Button
        android:id="@+id/bt_adds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:text="add" />

    <Button
        android:id="@+id/bt_deletes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Delete Existing Data"
        android:layout_below="@id/bt_adds"/>
    <Button
        android:id="@+id/bt_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="View Data"
        android:layout_below="@id/bt_deletes"/>

</LinearLayout>